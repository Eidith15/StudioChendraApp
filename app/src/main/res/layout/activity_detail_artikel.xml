<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:isScrollContainer="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.exoplayer2.ui.PlayerView
            android:id="@+id/vvDetailArtikel"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            app:resize_mode="fit"
            app:hide_on_touch="true"
            app:show_timeout="5000"
            app:rewind_increment="10000"
            app:fastforward_increment="10000"
            app:use_controller="true"
            android:background="@color/black"
            app:player_layout_id="@layout/exo_player_view"
            app:controller_layout_id="@layout/custom_controller_exo" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvDetailTanggalArtikel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="00/00/00"
                    android:textSize="10sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"/>

                <TextView
                    android:id="@+id/tvDetailJudulArtikel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textStyle="bold"
                    android:text="Judul Workshop"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    android:layout_margin="10dp"
                    />

                <TextView
                    android:id="@+id/tvDetailDeskripsiArtikel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:justificationMode="inter_word"
                    android:text="Deskripsi Workshop"/>

                <ImageView
                    android:id="@+id/ivDetailArtikel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:scaleType="fitXY"/>

                <Button
                    android:id="@+id/btnRegistrasiArtikel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Registrasi Order"
                    android:layout_margin="5dp" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>