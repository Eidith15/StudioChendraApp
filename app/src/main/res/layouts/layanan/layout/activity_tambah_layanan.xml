<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#BCBABA"
            app:boxBackgroundColor="@color/white">

            <EditText
                android:id="@+id/etJudulLayanan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Judul Layanan"
                android:inputType="textCapSentences|textMultiLine"
                android:maxLines="2"
                android:textSize="20sp"/>

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="@color/white"
            android:textColorHint="#BCBABA">

            <EditText
                android:id="@+id/etDeskripsiLayanan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Deskripsi Layanan"
                android:inputType="textCapSentences|textMultiLine"
                android:maxLines="5"
                android:textSize="20sp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnDatePickerLayanan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pilih Tanggal"
                android:drawableLeft="@drawable/ic_datepicker"
                android:textColor="@color/grey"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:layout_gravity="start" />

            <Button
                android:id="@+id/btnSelectImageLayanan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tambah Gambar"
                android:drawableLeft="@drawable/ic_add_photo"
                android:textColor="@color/grey"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:layout_gravity="start" />

            <Button
                android:id="@+id/btnSelectVideoLayanan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tambah Video"
                android:drawableLeft="@drawable/ic_add_video"
                android:textColor="@color/grey"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:layout_gravity="start" />

        </LinearLayout>

        <Button
            android:id="@+id/btnTambahLayanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="upload data Layanan"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

</ScrollView>