<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#BCBABA"
            app:boxBackgroundColor="@color/white">

            <EditText
                android:id="@+id/etJudulWorkshop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Judul Workshop"
                android:inputType="textCapSentences|textMultiLine"
                android:maxLines="2"
                android:textSize="20sp" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#BCBABA"
            app:boxBackgroundColor="@color/white">

            <EditText
                android:id="@+id/etDeskripsiWorkshop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Deskripsi Workshop"
                android:inputType="textCapSentences|textMultiLine"
                android:maxLines="5"
                android:textSize="20sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnDatePickerWorkshop"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:drawableLeft="@drawable/ic_datepicker"
                android:text="Pilih Tanggal"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@color/grey" />

            <Button
                android:id="@+id/btnSelectImageWorkshop"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:drawableLeft="@drawable/ic_add_photo"
                android:text="Tambah Gambar"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@color/grey" />

            <Button
                android:id="@+id/btnSelectVideoWorkshop"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:drawableLeft="@drawable/ic_add_video"
                android:text="Tambah Video"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@color/grey" />

        </LinearLayout>

        <Button
            android:id="@+id/btnTambahWorkshop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="upload data workshop" />
    </LinearLayout>

</ScrollView>