<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvDetailIdRegistrasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="id Registrasi"
        android:visibility="gone"/>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <ImageView
            android:id="@+id/ivDetailRegistrasiLayanan"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:scaleType="centerCrop"
            android:background="@color/black" />

        <TextView
            android:id="@+id/tvDetailTanggalRegistrasiLayanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="00-00-00"
            android:maxLines="2"
            android:textSize="12sp"
            android:ellipsize="end"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/tvDetailRegistrasiJudulLayanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Judul Layanan"
            android:maxLines="2"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:ellipsize="end"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Customer :"
            android:maxLines="2"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvDetailRegistrasiNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Customer"
            android:maxLines="2"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No. Telpon Customer : "
            android:maxLines="2"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvDetailRegistrasiNoHp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No. Telpon Customer"
            android:maxLines="2"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tanggal Registrasi : "
            android:maxLines="2"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvDetailTanggalRegistrasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tanggal Registrasi"
            android:maxLines="2"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <Button
            android:id="@+id/btnDetailRegistrasiCall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hubungi Customer"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

</LinearLayout>