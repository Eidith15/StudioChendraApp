<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:isScrollContainer="true"
    tools:context=".activity.portofolio.DetailPortofolioActivity">

    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/ivDetailPortofolio"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:layout_centerInParent="true"
        android:scaleType="fitCenter" />

        <LinearLayout
            android:id="@+id/llDetailPortofolio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/tvDetailJudulPortofolio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_centerInParent="true"
                android:text="Judul Foto"
                android:textStyle="bold"
                android:textColor="@color/smoke_white"
                android:maxLines="2"
                android:ellipsize="end"
                android:justificationMode="inter_word"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/tvDetailDeskripsiPortofolio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_centerInParent="true"
                android:text="Deskripsi Foto"
                android:textColor="@color/smoke_white"
                android:maxLines="3"
                android:ellipsize="end"
                android:justificationMode="inter_word"
                />

        </LinearLayout>
</RelativeLayout>